<UserControl x:Class="HandyControlDemo.UserControl.Expander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Expander Header="Title" BorderThickness="1,1,1,0" BorderBrush="{DynamicResource BorderBrush}" Width="240">
                <Border Height="100" Background="{DynamicResource SecondaryRegionBrush}"/>
            </Expander>
            <Expander Header="Title" BorderThickness="1,1,1,0" BorderBrush="{DynamicResource BorderBrush}" Width="240">
                <Border Height="100" Background="{DynamicResource SecondaryRegionBrush}"/>
            </Expander>
            <Expander Header="Title" BorderThickness="1,1,1,0" BorderBrush="{DynamicResource BorderBrush}" Width="240">
                <Border Height="100" Background="{DynamicResource SecondaryRegionBrush}"/>
            </Expander>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
