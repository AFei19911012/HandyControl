<UserControl x:Class="HandyControlDemo.UserControl.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <hc:TagPanel Margin="10" Orientation="Horizontal" MaxWidth="300" VerticalAlignment="Center" ShowAddButton="True"
                     AddTagButtonClick="TagPanel_OnAddTagButtonClick">
            <hc:Tag ShowCloseButton="False" Content="Text"/>
            <hc:Tag Selectable="True" Content="Text"/>
            <hc:Tag ShowCloseButton="False" Content="Text"/>
            <hc:Tag Content="Text"/>
            <hc:Tag IsSelected="True" Selectable="True" ShowCloseButton="False" Content="Text"/>
            <hc:Tag Content="Text"/>
            <hc:Tag ShowCloseButton="False" Content="Text"/>
            <hc:Tag IsSelected="True" Selectable="True" Content="Text"/>
            <hc:Tag ShowCloseButton="False" Content="Text"/>
            <hc:Tag Content="Text"/>
        </hc:TagPanel>
    </hc:TransitioningContentControl>
</UserControl>
